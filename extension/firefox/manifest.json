{
    "manifest_version": 2,
    "name": "F95CheckerX Browser Addon",
    "short_name": "F95CheckerX",
    "author": "WillyJL (modified by littleraisins)",
    "version": "1.1.0",
    "description": "Integration between the F95Zone forum and the F95CheckerX app",
    "homepage_url": "https://github.com/littleraisins/F95CheckerX",

    "browser_action": {
        "default_icon": {
            "16": "icons/16.png",
            "32": "icons/32.png",
            "64": "icons/64.png"
        }
    },
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "64": "icons/64.png",
        "128": "icons/128.png"
    },

    "background": {
        "scripts": ["extension.js"]
    },
    "permissions": [
        "scripting",
        "activeTab",
        "contextMenus",
        "webNavigation",
        "*://*.f95zone.to/*"
    ]
}
